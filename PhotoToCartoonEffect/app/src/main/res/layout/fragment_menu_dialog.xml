<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@color/card_prnt_shadow"
    android:padding="10dp"
    tools:context=".dialogfragment.MenuFragmentDialog">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        app:cardBackgroundColor="@color/card_prnt"
        app:cardCornerRadius="6dp"
        app:cardElevation="5dp"
        app:cardMaxElevation="5dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/closeIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:contentDescription="Close"
                android:focusable="true"
                android:src="@drawable/ic_menu_close"
                app:tint="@color/icons" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/closeIcon"
                android:layout_marginTop="24dp"
                android:minHeight="400dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/contactUsTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:drawableLeft="@drawable/contact_us"
                    android:drawableRight="@drawable/right_arrow"
                    android:drawablePadding="10dp"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:text="Contact Us"
                    android:textColor="@color/title" />

                <TextView
                    android:id="@+id/privacyPolicyTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:drawableLeft="@drawable/privacy"
                    android:drawableRight="@drawable/right_arrow"
                    android:drawablePadding="10dp"
                    android:focusable="true"
                    android:padding="16dp"
                    android:text="Privacy Policy"
                    android:textColor="@color/title"
                    android:gravity="center_vertical" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#383838" />

                <TextView
                    android:id="@+id/subscriptionsTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:drawableLeft="@drawable/subscriptions"
                    android:drawableRight="@drawable/right_arrow"
                    android:drawablePadding="10dp"
                    android:focusable="true"
                    android:padding="16dp"
                    android:text="Subscriptions"
                    android:textColor="@color/title"
                    android:gravity="center_vertical"/>

            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>
