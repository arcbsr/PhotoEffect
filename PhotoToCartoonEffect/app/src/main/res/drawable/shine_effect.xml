<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Glossy Gradient -->
    <gradient
        android:centerColor="@color/gold"
        android:endColor="@color/semi_white"
        android:startColor="@color/semi_white"
        android:type="linear" />

    <!-- Glossy Overlay for Shine Effect -->
    <size
        android:width="100dp"/>
    <corners android:radius="10dp" />

    <!-- Optional overlay effect for glossiness -->
    <item>
        <shape>
            <gradient
                android:angle="45"
                android:centerColor="#00FFFFFF"
                android:endColor="#80FFFFFF"
                android:startColor="#80FFFFFF"
                android:type="linear" />
        </shape>
    </item>
</shape>
